{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended", 
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "allowImportExportEverywhere": false,
        "codeFrame": false
    },    
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "no-var": 2,
        "strict": 0,
        "computed-property-spacing":1,
       "no-multi-spaces":[{"ignoreEOLComments": false} ],
       "no-spaced-func":"error",
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}